<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="console">
            <PatternLayout>
                <Pattern>%d - %p - %c{1.} - [%t] - %m %ex%n</Pattern>
            </PatternLayout>
        </Console>

        <File name="file" fileName="logs/log.log">
            <PatternLayout>
                <Pattern>%d - %p - %c{1.} - [%t] - %m %ex%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>
    <Loggers>
        <Root level="trace">
            <AppenderRef ref="file" level="DEBUG"/>
            <AppenderRef ref="console" level="DEBUG"/>
        </Root>
    </Loggers>
</Configuration>